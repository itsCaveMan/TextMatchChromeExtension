{
  "manifest_version": 3,
  "name": "Text Matching Chrome Extension",
  "version": "1.0",
  "description": "A barebones Chrome extension for text matching functionality",
  "permissions": [
    "activeTab",
    "storage",
    "sidePanel"
  ],
  "action": {
    "default_title": "Text Matching Extension"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
} 